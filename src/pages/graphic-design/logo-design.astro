            <Fragment slot="cover">
              <img
                        src="/works/hero-estem.webp"
                      />
            </Fragment>
          </SectionHeadSecImg>

          <SectionHeadImg>
            <Fragment slot="smltitle">
              In-person web design revisions
            </Fragment>
            <Fragment slot="title">
              Wordpress optimisation, made reliable.
            </Fragment>
