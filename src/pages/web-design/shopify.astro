---
import Cta from '../../components/home/Cta-Contact.astro';
import Integrations from '../../components/shopify/Integrations.astro';
import Hero from '../../components/shopify/Hero.astro';
import Intro from '../../components/shopify/Intro-Shopify.astro';
import SectionHeadImg from "../../components/home/slot-img.astro";
import SectionHeadSecImg from "../../components/home/slot-img-rev.astro";
import IntroSec from '../../components/shopify/Intro-Shopify-Sec.astro';
import Process from '../../components/home/Process.astro';
import Clients from '../../components/shopify/Grid-Clients.astro';
import Features from '../../components/shopify/Features.astro';
