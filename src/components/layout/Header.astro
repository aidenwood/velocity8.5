---
const links = [
  {
    ref: '01',
    name: 'Branding',
    href: '/graphic-design',
  },
  {
    ref: '02',
    name: 'Web Design',
    href: '/web-design',
  },
  {
    ref: '03',
    name: 'Marketing',
    href: '/digital-marketing',
  },
  {
    ref: '04',
    name: 'Contact',
    href: '/contact',
  },
];
---
<style>
  .arrow {
    border: solid #000;
    border-width: 0 2px 2px 0;
    display: inline-block;
    padding: 3px;
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
}
#logo, #bookBtn, #navContainer {
  transition: 0.2s;
}
#navContainer { max-width: 1920px; }
</style>

<header id="navbar"
  x-data="{ open: false }"
  class="transition sticky top-0 z-50 backdrop-blur-xl drop-shadow-sm"
  :class="{ 'bg-primary-200/50 dark:bg-primary-900/50': open, 'bg-primary-800/20 dark:bg-black/30': !(open) }"
>
  <div id="navContainer"
    class="mx-auto w-full flex items-center justify-between px-4 sm:px-6 lg:px-8 py-1 sm:py-2"
  >
    <!-- Brand logo -->
    <div class="flex my-2">
      <a
        href="/"
        class="focus-visible:outline-primary-950 dark:group-focus-visible:outline-primary-200 rounded-md focus-visible:outline focus-visible:outline-2"
      >
        <span class="sr-only">Aidxn Web Design Logo</span>
        <img id="logo"
          class="h-8 xs:h-10 lg:h-12 w-auto"
          :src="$store.theme.isDark ? '/ax-logo-white.svg' : '/ax-logo-purp.svg'"
          alt="Aidxn Web Design Logo"
        />
      </a>
    </div>

    

    <!-- Actions -->
    <div class="flex items-center space-x-2 md:space-x-3">
      <div class="hidden">
        <a  id="bookBtn"
          href="https://g2ok5807scs.typeform.com/to/tCmzlDza?typeform-source=aidxn.com"
          class="hover:bg-violet-950 hover:border-violet-950 dark:hover:bg-violet-200 hover:text-white dark:hover:text-primary-950 dark:hover:border-violet-200 dark:border-white dark:outline-violet-400 dark:text-white inline-flex tracking-tighter md:tracking-normal items-center justify-center rounded-full px-4 xs:px-5 py-2 xs:py-3 text-sm xl:text-base font-medium transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
        >
          Book <span class="hidden md:block">&nbsp;a Call</span>
      </a>
      </div>
      

      
      <!-- Toggle theme mode -->
      <button
        type="button"
        class="dark:border-white dark:outline-violet-400 dark:text-white text-primary-950 hover:bg-primary-500/10 dark:hover:bg-primary-400/10 ring-primary-950 inline-flex h-12 xl:h-14 w-12 xl:w-14 items-center justify-center rounded-full transition focus:outline-none focus-visible:ring-2"
        x-data
        @click="$store.theme.toggle()"
      >
        <span class="sr-only">Toggle theme mode</span>
        <svg
          x-cloak
          class="h-5 w-5 md:h-6 md:w-6"
          :class="{ 'hidden': !($store.theme.isDark) }"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            d="M12 18C8.68629 18 6 15.3137 6 12C6 8.68629 8.68629 6 12 6C15.3137 6 18 8.68629 18 12C18 15.3137 15.3137 18 12 18ZM12 16C14.2091 16 16 14.2091 16 12C16 9.79086 14.2091 8 12 8C9.79086 8 8 9.79086 8 12C8 14.2091 9.79086 16 12 16ZM11 1H13V4H11V1ZM11 20H13V23H11V20ZM3.51472 4.92893L4.92893 3.51472L7.05025 5.63604L5.63604 7.05025L3.51472 4.92893ZM16.9497 18.364L18.364 16.9497L20.4853 19.0711L19.0711 20.4853L16.9497 18.364ZM19.0711 3.51472L20.4853 4.92893L18.364 7.05025L16.9497 5.63604L19.0711 3.51472ZM5.63604 16.9497L7.05025 18.364L4.92893 20.4853L3.51472 19.0711L5.63604 16.9497ZM23 11V13H20V11H23ZM4 11V13H1V11H4Z"
          ></path>
        </svg>
        <svg
          x-cloak
          class="h-5 w-5 md:h-6 w-6"
          :class="{ 'hidden': $store.theme.isDark }"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            d="M10 6C10 10.4183 13.5817 14 18 14C19.4386 14 20.7885 13.6203 21.9549 12.9556C21.4738 18.0302 17.2005 22 12 22C6.47715 22 2 17.5228 2 12C2 6.79948 5.9698 2.52616 11.0444 2.04507C10.3797 3.21152 10 4.56142 10 6ZM4 12C4 16.4183 7.58172 20 12 20C14.9654 20 17.5757 18.3788 18.9571 15.9546C18.6407 15.9848 18.3214 16 18 16C12.4772 16 8 11.5228 8 6C8 5.67863 8.01524 5.35933 8.04536 5.04293C5.62119 6.42426 4 9.03458 4 12ZM18.1642 2.29104L19 2.5V3.5L18.1642 3.70896C17.4476 3.8881 16.8881 4.4476 16.709 5.16417L16.5 6H15.5L15.291 5.16417C15.1119 4.4476 14.5524 3.8881 13.8358 3.70896L13 3.5V2.5L13.8358 2.29104C14.5524 2.1119 15.1119 1.5524 15.291 0.835829L15.5 0H16.5L16.709 0.835829C16.8881 1.5524 17.4476 2.1119 18.1642 2.29104ZM23.1642 7.29104L24 7.5V8.5L23.1642 8.70896C22.4476 8.8881 21.8881 9.4476 21.709 10.1642L21.5 11H20.5L20.291 10.1642C20.1119 9.4476 19.5524 8.8881 18.8358 8.70896L18 8.5V7.5L18.8358 7.29104C19.5524 7.1119 20.1119 6.5524 20.291 5.83583L20.5 5H21.5L21.709 5.83583C21.8881 6.5524 22.4476 7.1119 23.1642 7.29104Z"
          ></path>
        </svg>
      </button>


      <!-- Toggle menu -->
      <button
        type="button"
        class="text-primary-950 hover:bg-primary-500/10 dark:hover:bg-primary-400/10 ring-primary-950 dark:border-white dark:outline-violet-400 dark:text-white inline-flex h-12 xl:h-14 w-12 xl:w-14 items-center justify-center rounded-full transition focus:outline-none focus-visible:ring-2"
        @click="open = !open"
        @mousedown="if (open) $event.preventDefault()"
        aria-controls="website-menu"
        aria-expanded="false"
        :aria-expanded="open.toString()"
      >
        <span class="sr-only">Toggle menu</span>
        <svg
          x-cloak
          class="h-6 w-6 md:h-8 md:w-8"
          :class="{ 'hidden': open, 'block': !(open) }"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path d="M19 8H5V10H19V8ZM19 14H5V16H19V14Z"></path>
        </svg>
        <svg
          x-cloak
          class="h-6 w-6 md:h-8 md:w-8"
          :class="{ 'block': open, 'hidden': !(open) }"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            d="M12.0007 10.5865L16.9504 5.63672L18.3646 7.05093L13.4149 12.0007L18.3646 16.9504L16.9504 18.3646L12.0007 13.4149L7.05093 18.3646L5.63672 16.9504L10.5865 12.0007L5.63672 7.05093L7.05093 5.63672L12.0007 10.5865Z"
          ></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Menu content -->
  <div
    class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8"
    id="website-menu"
    x-cloak
    x-show="open"
    x-collapse
    x-collapse.duration.500ms
  >
    <div class="grid grid-cols-1 gap-16 lg:grid-cols-2 pt-8 pb-12">
      <div
        class="bg-primary-500/30 dark:bg-primary-400/30 hidden items-center justify-center rounded-3xl px-6 py-8 lg:flex"
      >
        <p
          class="text-primary-950/70 dark:text-primary-200/70 max-w-sm text-xl leading-loose"
        >
          <span class="font-medium">Velocity</span> is our very own website theme, having a powerful impact for clients in a range of industries. Developed for over 6 years, now at version 8.5.71.
        </p>
      </div>

      <!-- Navigation -->
      <nav class="divide-primary-900/10 dark:divide-primary-300/10 flex flex-col gap-1 divide-y">
        {
          links.map((link) => (
            <a
              href={link.href}
              class="text-primary-950 dark:text-primary-200 group inline-flex py-6 text-3xl font-medium tracking-tight transition focus-visible:outline-none sm:py-8 sm:text-4xl"
            >
              <div class="group-focus-visible:outline-primary-950 dark:group-focus-visible:outline-primary-200 flex flex-1 items-center justify-between rounded-3xl group-focus-visible:outline group-focus-visible:outline-2 group-focus-visible:outline-offset-2">
                <div class="flex items-center gap-6">
                  <span class="text-xs">{link.ref}</span>
                  <span class="group-hover:underline">{link.name}</span>
                </div>
                <svg
                  class="text-primary-600 dark:text-primary-400 h-6 w-6 sm:h-8 sm:w-8"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                </svg>
              </div>
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</header>
