<style>
  #contain { max-width: 1920px; }
</style>

<footer
  class="bg-primary-500/10 dark:bg-primary-400/10 mt-16 py-16 lg:mt-20 lg:py-20"
  aria-labelledby="footer-heading"
>
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div id="contain" class="mx-auto px-4 sm:px-6 w-full lg:px-8">
    <div class="flex flex-col justify-between gap-12 sm:gap-16 lg:flex-row">
      <div class="flex w-full sm:max-w-md xl:max-w-lg flex-col items-start gap-6 sm:gap-8">
        <img
          class="h-8 xs:h-20 sm:h-24 w-auto"
          :src="$store.theme.isDark ? '/ax-logo-white.svg' : '/ax-logo-purp.svg'"
          alt="Aidxn Design - Gold Coast Web Design"
        />
        <p class="text-primary-950 dark:text-primary-200 text-base xl:text-lg">
          Leaders on the Gold Coast in web design, SEO, graphic design and digital marketing.
          Web design done face-to-face.
        </p>
        <p class="text-primary-950/70 dark:text-primary-200/70 text-sm">Â© 2023 Aidxn Design</p>
      </div>

      <!-- Bottom links -->
      <div class="grid w-full lg:max-w-5xl flex-1 grid-cols-1 gap-8 md:grid-cols-4">
        {
          bottomLinks.map((group) => (
            <div class="flex flex-col gap-4">
              <p class="text-xl md:text-sm sm:text-base font-medium">{group.header}</p>
              <ul role="list" class="flex flex-col gap-3">
                {group.links.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="focus-visible:outline-primary-950 dark:focus-visible:outline-primary-200 inline-flex items-center gap-1 rounded-md text-lg md:text-sm xl:text-base hover:underline focus-visible:outline focus-visible:outline-2"
                      target={link.isExternal ? '_blank' : undefined}
                      rel={link.isExternal ? 'noopener' : undefined}
                    >
                      {link.name}
                      {link.isExternal && (
                        <svg
                          class="h-4 w-4"
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="currentColor"
                          aria-hidden="true"
                        >
                          <path d="M10 6V8H5V19H16V14H18V20C18 20.5523 17.5523 21 17 21H4C3.44772 21 3 20.5523 3 20V7C3 6.44772 3.44772 6 4 6H10ZM21 3V11H19L18.9999 6.413L11.2071 14.2071L9.79289 12.7929L17.5849 5H13V3H21Z" />
                        </svg>
                      )}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</footer>
