---
const pricing = [
  {
    name: 'Velocity - Small',
    description: 'Our high-performance website theme. Developed over 6+ years to reduce the cost of websites.',
    periodicity: '+ GST',
    isFlagged: false,
    price: '$3445',
    action: 'Buy Now',
    link: '/web-design/velocity',
    features: [
      '8 pages and all design assets', 
      'Installation and domain setup',
      'Lifetime ownership',
      'Turnaround in 21 days'
    ],
  },
  {
    name: 'Wordpress - Small',
    description: 'High-performance Wordpress installation, hosting and development. 1 year of hosting included.',
    periodicity: '+ GST',
    price: '$5445',
    action: 'Buy Now',
    link: '/web-design/wordpress',
    features: [
      '16 pages and all design assets',
      'Installation and domain setup',
      '1 year of hosting included', 
      'Turnaround in 30 days'
    ],
  },
];
---

<section class="my-28">
  <div class="mx-auto px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="-mt-8 grid gap-6 lg:mt-0 md:grid-cols-2">
      {
        pricing.map((item) => (
          <div
            class:list={[
              'relative flex flex-col gap-8 rounded-3xl px-4 sm:px-6 lg:px-8 py-12 border border-primary-900/10 dark:border-primary-300/10',
              item.isFlagged && 'bg-primary-500/10 dark:bg-primary-400/10',
            ]}
          >
            <div class="flex flex-col gap-4">
              <h3 class="text-xl font-medium">{item.name}</h3>
              <p class="flex items-baseline">
                <span class="text-primary-950/70 dark:text-primary-200/70 mr-2 text-sm font-medium">
                  From 
                </span> 
                <span class="text-4xl font-medium tracking-tight">{item.price}</span>
                <span class="text-primary-950/70 dark:text-primary-200/70 ml-2 text-sm font-medium">
                  {item.periodicity}
                </span>
              </p>
              <p class="text-primary-950/80 dark:text-primary-200/80 text-base xs:text-lg">{item.description}</p>

              <ul role="list" class="mt-4 space-y-4">
                {item.features.map((feature) => (
                  <li class="flex items-center gap-3 text-base">
                    <svg
                      class="text-primary-600 dark:text-primary-400 h-6 w-6 flex-shrink-0"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM11.0026 16L18.0737 8.92893L16.6595 7.51472L11.0026 13.1716L8.17421 10.3431L6.75999 11.7574L11.0026 16Z" />
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
            <div class="mt-2">
              <a
                href={item.link}
                class="bg-primary-600 dark:bg-primary-400 hover:bg-primary-700 dark:hover:bg-primary-300 focus-visible:outline-primary-600 dark:focus-visible:outline-primary-400 dark:text-primary-950 w-full items-center justify-center rounded-full border border-transparent px-5 py-4 text-base font-medium text-white transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
              >
                More info
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
