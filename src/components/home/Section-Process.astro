---
const services = [
  {
    step: '01',
    name: 'Brand Design',
    img: '/works/ax-logo-design.webp',
    alt: 'Brand Strategy and Graphic Design on the Gold Coast',
    description:
      'Complete graphic design for print, web and digital marketing.',
    link: '/graphic-design',
  },
  {
    step: '02',
    name: 'Web Design',
    img: '/works/ax-logo-develop.webp',
    alt: 'Web Design with Shopify, Wordpress and Velocity',
    description:
      'An expert in web design, that truly learns your business.',
    link: '/web-design',
  },
  {
    step: '03',
    name: 'Digital Marketing',
    img: '/works/ax-logo-market.webp',
    alt: 'Digital marketing services and marketing management',
    description:
      'Digital marketing management that aims to help you spend less.',
    link: '/digital-marketing',
  },
  {
    step: '04',
    name: 'Moonshot Plan',
    img: '/works/ax-logo-moonshot.webp',
    alt: 'Complete website, branding and digital marketing management.',
    description:
      'Complete website and marketing management and optimisation.',
    link: '/moonshot-plan',
  },
];
---

<section class="mb-28 mt-16">
  <div class="mx-auto px-4 sm:px-6 w-full lg:max-w-7xl lg:px-8">
    <div class="">
      <div class="w-full text-center">
        <h2 class="text-base lg:text-lg uppercase font-thin tracking-widest pb-4">
          Services
        </h2>
      </div>
      
      <div class="grid gap-6 grid-cols-1 sm:grid-cols-2">
        {
          services.map((service) => (
          <a rel="canonical" href={service.link}>  
            <div class="border-primary-900/10 dark:border-primary-300/10 hover:bg-primary-900/10 hover:dark:bg-primary-300/10 duration-200 rounded-3xl border px-6 py-8 lg:py-12 h-full flex flex-col justify-center gap-4">
              <div class="w-full flex flex-row-reverse sm:flex-col md:flex-row-reverse items-center justify-center gap-6">
                
                <div class="w-1/4 sm:w-full md:w-1/3 lg:w-1/3">
                  <img
                    class="m-auto h-auto w-4/5 sm:w-1/2 md:w-3/4"
                    width="640"
                    height="640"
                    src={service.img}
                    alt={service.alt}
                  />
                </div>
                
                <div class="w-3/4 sm:w-full md:w-3/4 lg:w-2/3 mx-auto md:ml-2 flex flex-col gap-4">
                  <p class="hidden md:block text-sm">{service.step}</p>
                  <h3 class="text-left text-xl xs:text-2xl md:text-3xl tracking-tight font-medium">{service.name}</h3>
                  <p class="hidden sm:block text-primary-950 dark:text-primary-200 text-base xs:text-lg pr-4 leading-6">
                    {service.description}
                  </p>
                </div>
                
              </div>
            </div>
          </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
