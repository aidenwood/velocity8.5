---
const services = [
  {
    step: '01',
    img: '/assets/trig.svg',
    alt: 'Gold Coast Graphic Design',
    name: 'Pure Blue Beef',
    description:
      'Australian grown, top-quality grass fed beef.',
  },
  {
    step: '02',
    name: 'RayCorp International',
    img: '/assets/hex.svg',
    alt: 'Gold Coast Web Design and Web Development',
    description:
      'Restocking and refueling of international navy ships.',
  },
  {
    step: '03',
    name: 'Brisbane Bombers',
    img: '/assets/deca.svg',
    alt: 'Gold Coast Digital Marketing and Strategy Development',
    description:
      'A proposal to the NRL for a second Brisbane team.',
  },
  {
    step: '04',
    name: 'Certified Free Range Beef',
    img: '/assets/octa.svg',
    alt: 'Gold Coast Digital Marketing and Brand Management',
    description:
      'Exporter of top-tier Australian Wagyu Beef.',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto px-4 sm:px-6 w-full lg:max-w-7xl lg:px-8">
    <div class="">
      <h4 class="text-2xl sm:text-3xl font-medium tracking-tight mb-6">Our Brands.</h4>
      <div class="grid gap-8 grid-cols-1 sm:grid-cols-2">
        {
          services.map((service) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col rounded-3xl px-6 py-8">
              
              <div class="flex flex-col lg:flex-row gap-4">
                <img
                  class="h-auto w-1/3 sm:w-16 md:w-18 lg:w-28 rounded-3xl"
                  width="640"
                  height="640"
                  src={service.img}
                  alt={service.alt}
                />
                <div class="flex flex-col gap-4">
                  <p class="text-sm">{service.step}</p>
                  <h3 class="text-2xl sm:text-lg lg:text-xl font-medium">{service.name}</h3>
                  <p class="text-primary-950/70 dark:text-primary-200/70 text-base leading-6">
                    {service.description}
                  </p>
                </div>
                
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
