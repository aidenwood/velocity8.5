<!-- CSS -->
<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">


<!-- JavaScript -->
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
    
<style>

.main-carousel {
  border: 1px black;
  max-width: 100vw;
  height: 90vh;
  max-height: 900px;
}

@media only screen and (max-width: 768px) {
  .main-carousel {
    height: 70vh;
    max-height: 550px;
  }
}

.carousel-cell {
  border: 1px black;
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-items: center;
  text-align: left;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
}

</style>



<section class="">
  <div class="limit-container">
    <div class="main-carousel" data-flickity='{ "cellAlign": "left", "contain": true, "pageDots": false, "autoPlay": 2800, "imagesLoaded": true, "prevNextButtons": false, "wrapAround": true }'>
      
      <div class="carousel-cell px-4 sm:px-6 lg:px-8"
          style="background-image:url(/stock/outdoor-thirds.webp);">
        <div class="carousel-container h-full w-full bg-slate-900/60 rounded-2xl backdrop-blur-xl max-w-3xl my-auto">
          <div class="carousel-inner flex flex-col gap-4 sm:gap-6 px-4 sm:px-6 lg:px-8 py-8 sm:py-12 text-white">
            <h1 class="text-base uppercase font-thin tracking-widest">
              <slot name="smltitle">Title</slot>
            </h1>
            <h2 class="font-medium tracking-tighter md:tracking-tight text-4xl md:text-5xl">
              <slot name="title">Title</slot>
            </h2>
            <p class="text-lg lg:text-xl">
              <slot name="desc">Title</slot>
            </p>
            <div class="pt-2 flex gap-6">
              <a href="/enquire" class="text-lg text-white dark:text-white bg-primary-700 hover:bg-primary-400 items-center inline-flex font-medium justify-center rounded-full transition px-6 py-4 mr-2">Enquire</a>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>
