<!-- GSAP and ScrollTrigger Import -->
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.4/gsap.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.4/ScrollTrigger.min.js"></script>


<div class="flex flex-col-reverse lg:flex-row justify-center items-start md:items-center mx-auto max-w-7xl gap-12 px-4 sm:px-6 lg:px-8 py-12 my-24">
  <div id="leftContainer" class="w-full lg:w-2/3 xl:w-1/2 max-w-3xl py-12">
    <h2 class="font-thin pb-4 text-xs tracking-widest uppercase">
      <slot name="smltitle">Aidxn Design</slot>
    </h2>
    <h3 class="text-3xl sm:text-4xl font-medium tracking-tight">
      <slot name="title">Title</slot>
    </h3>
    <p class="text-base xs:text-lg dark:text-primary-200/80 text-primary-950/80 leading-6 max-w-3xl mt-4 lg:mr-4">
      <slot name="desc">Some description goes here</slot>
    </p>
  </div>
  <div id="rightContainer" class="w-full lg:w-1/3 xl:w-1/2 max-w-3xl h-96 lg:h-auto bg-contain">
    <img
      src="/works/ax-sqr-estemshop.webp"
      class="scrollImageAnimation w-full py-8"
      alt="custom shopify website designer on the Gold Coast. Improving sales and conversion rate for shopify business owners by offering website design, brand design and digital marketing management."
    />
  </div>
</div>

<script>
  // First live gsap animation with ScrollTrigger
gsap.set(".scrollImageAnimation", { xPercent: 10, opacity: 0 });

gsap.to(".scrollImageAnimation", {
  xPercent: 0,
  opacity: 1,
  scrollTrigger: {
    trigger: ".scrollImageAnimation",
    start: "top 85%",
    end: "bottom 85%",
    scrub: true,
    markers: false,
    id: "slot-img-gsap"
  }
});
</script>