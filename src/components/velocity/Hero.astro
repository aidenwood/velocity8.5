
<!-- SVG CSS and Animate for Aidxn Moving Logo -->
<style>
  svg{width:100%;height:100%;perspective:50px}circle{stroke:#52007e;stroke-width:8px;fill:none}.equator{stroke:#a600ff;transform:rotateZ(-20deg) rotateX(125deg)}.meridian{animation:2s linear infinite turn;transform:rotateZ(-20deg) rotateX(35deg) rotateY(var(--start))}@keyframes turn{100%{transform:rotateZ(-20deg) rotateX(35deg) rotateY(var(--end))}}
  .carousel-cell {
  max-width: 66%;
  height: 520px;
  margin-right: 15px;
}

.carousel-cell img {
  display: block;
  max-width: 100%;
  max-height: 100%;
}
* { box-sizing: border-box; }

/* brighten selected image */
.carousel-cell.is-selected img {
  opacity: 1;
}

@media screen and ( max-width: 768px ) {
  .carousel-cell {
    height: 420px;
  }
}

@media screen and ( max-width: 960px ) {
  .carousel-cell {
    max-width: 90%;
  }
}
  /* position dots up a bit */
  .flickity-page-dots {
    bottom: -22px !important;
  }
  /* dots are lines */
  .flickity-page-dots .dot {
    height: 4px !important;
    width: 40px !important;
    margin: 0 !important;
    border-radius: 0 !important;
  }

  .flickity-viewport {
    transition: 0.2s;
  }
</style>

